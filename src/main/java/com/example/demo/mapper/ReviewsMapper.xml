<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.ReviewsMapper">
	<resultMap id="BaseResultMap" type="model.Reviews">
		<id column="id" property="ID" jdbcType="INTEGER" />
		<result column="userid" property="UID" jdbcType="INTEGER" />
		<result column="pageid" property="PID" jdbcType="INTEGER" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="date" property="date" jdbcType="TIMESTAMP" />
		<association property="user" javaType="model.User">
			<id column="id" property="ID" />
			<result column="account" property="account" jdbcType="VARCHAR" />
			<result column="nickname" property="nickname" jdbcType="VARCHAR" />
			<result column="email" property="email" jdbcType="VARCHAR" />
			<result column="phone" property="phone" jdbcType="VARCHAR" />
			<result column="birthday" property="birthday" jdbcType="TIMESTAMP" />
			<result column="nickname" property="nickname" jdbcType="VARCHAR" />
			<result column="sex" property="sex" jdbcType="VARCHAR" />
			<result column="date" property="date" jdbcType="TIMESTAMP" />
			<result column="status" property="status" jdbcType="INTEGER" />
			<result column="image" property="image" jdbcType="VARCHAR" />
		</association>
		<association property="page" javaType="model.Page">
			<id column="id" property="ID" />
			<result column="title" property="title" />
			<result column="source" property="source" />
			<result column="link" property="link" />
		</association>
	</resultMap>

	<insert id="addReviews" parameterType="model.Reviews">
		insert into reviews
		(userid,
		pageid, content,date)
		values
		(#{UID,jdbcType=INTEGER},
		#{PID,jdbcType=INTEGER},
		#{content,jdbcType=VARCHAR},
		#{date,jdbcType=TIMESTAMP})
	</insert>

	<select id="selectByPage" resultMap="BaseResultMap">
		select
		reviews.*,user.*
		from
		reviews,user
		where
		pageid = #{PID,jdbcType=INTEGER} and reviews.userid = user.id
	</select>
	<select id="selectByID" resultMap="BaseResultMap">
		select
		reviews.*
		from
		reviews
		where
		id = #{ID,jdbcType=INTEGER}
	</select>
	<select id="selectByUserID" resultMap="BaseResultMap">
		select
		reviews.*
		from
		reviews
		where
		userid = #{UID,jdbcType=INTEGER}
	</select>
	<select id="reviewsNumber" parameterType="java.lang.Integer"
		resultType="java.lang.Integer">
		SELECT count(*) from reviews where userid =
		#{UID,jdbcType=INTEGER}
	</select>
	<delete id="deleteByID" parameterType="java.lang.Integer">
		delete from reviews
		where
		id
		= #{ID,jdbcType=INTEGER}
	</delete>
	<delete id="deleteByUserID" parameterType="java.lang.Integer">
		delete from reviews
		where
		userid
		= #{UID,jdbcType=INTEGER}
	</delete>
</mapper>